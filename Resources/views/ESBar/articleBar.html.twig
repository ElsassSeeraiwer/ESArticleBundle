{% if is_granted(authorized_role|default('ROLE_SUPER_ADMIN')) %}
	<div class="eSeeraiwer-toolbar-block" style="float:right;">
	    <div class="eSeeraiwer-toolbar-icon">
	        <a onclick="toggleArticleEditionStatus();" title="Activate/Desactivate inline article edition." style="cursor:pointer;">
	            <img id="articleEditionImgGrey" alt="article-edition" src="data:image/png;base64,">
	            <img style="display:none;" id="articleEditionImgGreen" alt="article-edition" src="data:image/png;base64,">
	        </a>
	    </div>
	</div>
	<div class="eSeeraiwer-toolbar-block" style="float:right;">
	    <div class="eSeeraiwer-toolbar-icon">
	        <a href="{{ path('elsassseeraiwer_esarticle_articledb_list') }}">
	            <img width="0" height="28" alt="" src="">
	            <span>Article</span>
	        </a>
	    </div>
	</div>
	<script>
		function toggleArticleEditionStatus()
		{
			articleEditionStatus = window.localStorage.getItem('articleEditionStatus');
			if(articleEditionStatus == 0)
			{
				window.localStorage.setItem('articleEditionStatus', 1);
				window.location.reload();
			}
			else if(articleEditionStatus == 1)
			{
				window.localStorage.setItem('articleEditionStatus', 0);
				window.location.reload();
			}
		}
	</script>
{% endif %}